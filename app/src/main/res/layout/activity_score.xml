<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sduhelper.Activities.ScoreActivity">
    <include
        layout="@layout/app_bar_funcs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <android.support.design.widget.TabLayout
        android:id="@+id/score_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="2dp">
        <android.support.design.widget.TabItem
            android:id="@+id/score_tab_chengji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成绩查询"/>
        <android.support.design.widget.TabItem
            android:id="@+id/score_tab_jidian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绩点查询"/>
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/score_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
