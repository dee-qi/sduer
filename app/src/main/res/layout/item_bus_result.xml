<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_bus_result_time"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_time_black_24dp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_bus_result_start"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/ic_nothing"
        android:drawablePadding="8dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_bus_result_pass"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/ic_nothing"
        android:drawablePadding="8dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_bus_result_end"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/ic_nothing"
        android:drawablePadding="8dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>